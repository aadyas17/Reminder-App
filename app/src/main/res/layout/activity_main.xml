<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_1"
    android:padding="16dp"
    android:gravity="center">

    <!-- Task Input Field -->
    <EditText
        android:id="@+id/taskInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task"
        android:inputType="text"
        android:textColor="#000000"
    android:textColorHint="#757575"
    android:textSize="18sp"
    android:background="#FFEBEE"
    android:padding="12dp"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center"
    android:elevation="2dp" />

    <!-- Time Picker -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="clock"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <!-- Set Reminder Button -->
    <Button
        android:id="@+id/setReminderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Reminder"
        android:textColor="#000000"
    android:backgroundTint="#B3E5FC"
    android:textSize="16sp"
    android:padding="14dp"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center"
    android:elevation="4dp" />

    <!-- View Saved Tasks Button -->
    <Button
        android:id="@+id/viewTasksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Saved Tasks"
        android:textColor="#000000"
    android:backgroundTint="#C8E6C9"
    android:textSize="16sp"
    android:padding="14dp"
    android:layout_gravity="center"
    android:elevation="4dp" />

    <!-- TextView to display saved tasks -->
    <TextView
        android:id="@+id/taskListTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tasks saved."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center" />


</LinearLayout>
